    <html>
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
        <link rel="stylesheet" href="https://pro.fontawesome.com/releases/v5.10.0/css/all.css" integrity="sha384-AYmEC3Yw5cVb3ZcuHtOA93w35dYTsvhLPVnYs9eStHfGJvOvKxVfELGroGkvsg+p" crossorigin="anonymous"/>
        <script src="https://code.jquery.com/jquery-3.6.0.min.js">
        </script>
        <script src="/javascripts/project.js">
        </script>
        
        <title>
          Admin Dashboard
        </title>
          
          <body style="background-color: #4B0082;">


        <nav class="navbar navbar-light bg-light">
            <a class="navbar-brand" href="#">
                
                <div style="font-size: 24px;color: #4B0082;font-weight: bolder;letter-spacing: 2px;">
                    <img src="/images/product.png" width="30" height="30" class="d-inline-block align-top" alt="">
                    Products Management
            </div>
            </a>
            <div style="font-size: 24px;color: #4B0082;font-weight: bolder;letter-spacing: 2px;">
                <img src="/images/<%=aresult.picture %>" style="border-radius: 30px;width: 50px;height: 50px;">
                <%=aresult.adminname %>
            </div>
        </nav>

    <div class="form-row">
                              
        <div class="form-group col-md-2" style="display: flex;align-items: center;justify-content: left;font-size: 24px;color: #4B0082;font-weight: bolder;letter-spacing: 2px;">
            <div class="dashboard">
                <div><a type="button" style="font-size: 16px;color: #4B0082;" class="btn btn-light wd" href="/admin/dashboard">Dashboard</a></div>
                <div><a type="button" style="font-size: 16px;color: #4B0082;" class="btn btn-light wd" href="/products/productinterface">Add Products</a></div>
                <div><a type="button" style="font-size: 16px;color: #4B0082;" class="btn btn-light wd" href="/products/displayproducts">Products List</a></div>
                <div><a type="button" style="font-size: 16px;color: #4B0082;" class="btn btn-light wd" href="/products/searchbyid">Search Products</a></div>
                <div><a type="button" style="font-size: 16px;color: #4B0082;" class="btn btn-light wd" href="/admin/logout">Logout</a></div>
                
            </div>


        </div>  
        <div class="form-group col-md-10" style="display: flex;align-items: center;justify-content: center;padding-left: 20px;font-size: 24px;color: #fff;font-weight: bolder;letter-spacing: 2px;">
            

            <script src="https://code.jquery.com/jquery-3.6.0.min.js">
            </script>
            <script src="/javascripts/project.js">
            </script>
            
            <title>
              Product List
            </title>
              
              <body style="background-color: #4B0082;">
                <div class="root">
                <div class="box">
                    <div class="row">
                        <div style="padding-left: 20px;font-size: 24px;color: #4B0082;font-weight: bolder;letter-spacing: 2px;">
                           <img src="/images/product.png" width="40">
                           PRODUCT LIST
                        </div>
                        <div style="display: flex;justify-content: right;align-items: center;width: 900;">
                            <a style="font-weight: bold" class="btn btn-primary" href="/products/productinterface" role="button">Add New Product</a>
    
                        </div>
    
    
                  </div>
                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">Name</th>
                            <th scope="col">Model</th>
                            <th scope="col">Category</th>
                            <th scope="col">GST</th>
                            <th scope="col">Unit</th>
                            <th scope="col">Price</th>
                            <th scope="col">Offer</th>
                            <th scope="col">Stock</th>
                            <th scope="col">Picture</th>
                            <th style="display: flex;justify-content:center" scope="col">Update/Delete</th>
                       
                        </tr>
    
                    </thead>
                    <tbody>
      
    
        <% if(result) { 
    
            result.map((item)=>{ %>
                
                <tr>
                    <th scope="row"><%=item.productid %></th>
                
                    <td><%=item.productname %></td>
                    <td><%=item.productmodel %></td>
                    <td><%=item.category %></td>
                    <td><%=item.gst %></td>
                    <td><%=item.unitname %><br><%=item.producttypename %></td>
                    <td><%=item.price %> <%=item.currencytype %></td>
                    <td><%=item.offerrate %><br><%=item.offertype %></td>
                    <td><%=item.stock %></td>
                    <td><a href="/products/editpicture?pid=<%=item.productid %>&pname=<%= item.productname %>&picture=<%=item.picture %>"><img src='/images/<%=item.picture %>' width="40"></a></td>
                    <th>
                        <div style="display: flex;justify-content:center;width: 200;">
                        <a style="font-weight: bold" class="btn btn-outline-primary" href="/products/displaybyid?pid=<%=item.productid %>" role="button">Update/Delete</a>
    
                    </div>
                    </th>
                </tr>    
            
    
        <% }) } else { %>   
            
            <h1><%=msg %></h1>
    
        <% } %>
    </tbody>
        </table>
        </div>
        </div>     
        </body>
         
        
        </div>


    </div>
          




</body>
    </html>

